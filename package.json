{
  "name": "@tyro/tyro-pay-api-react-native-example-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .tsx  --max-warnings 0",
    "lint:fix": "eslint . --fix --ext .tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "precommit:checks": "npm run format:check && npm run lint && npm test",
    "precommit_withDeviceTests": "npm run precommit:checks && npm run test:unit:android && npm run test:unit:ios",
    "precommit": "npm run precommit:checks",
    "prepush:checks": "npm test && npm audit --omit=dev --audit-level=high",
    "prepush_withDeviceTests": "npm run prepush:checks && npm run test:unit:android && npm run test:unit:ios",
    "prepush": "npm run prepush:checks",
    "prepare": "[ \"$NODE_ENV\" == production ] || husky install",
    "test:unit:ios": "cd ios && xcodebuild test -workspace TyroPayApiReactNative.xcworkspace -scheme TyroPayApiReactNative -configuration Debug -destination name=\"iPhone 14 Pro Max\"",
    "test:unit:android": "cd android && chmod +x ./gradlew && ./gradlew --no-daemon test",
    "test:e2e:ios": "bash ./scripts/run-e2e-tests ios",
    "test:e2e:android": "bash ./scripts/run-e2e-tests android",
    "android:release": "react-native run-android --mode=release",
    "ios:release": "react-native run-ios --mode Release --simulator \"iPhone 15\"",
    "install:all": "npm run install:no-pods && npm run install:pods",
    "install:pods": "npx pod-install",
    "install:no-pods": "npm install",
    "gradlew:build:all": "npm run gradlew:build:sdk",
    "gradlew:build:sdk": "cd android && chmod +x ./gradlew && ./gradlew --no-daemon -S -Dorg.gradle.dependency.verification=off clean build"
  },
  "dependencies": {
    "@tyro/tyro-pay-api-react-native": "^0.0.1-alpha.3",
    "react": "18.2.0",
    "react-native": "0.72.7",
    "react-native-svg": "^14.1.0",
    "react-native-webview": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv": "^16.4.2",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-destructuring": "^2.2.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-config": "^27.5.1",
    "jest-when": "^3.5.1",
    "lint-staged": "^12.3.3",
    "metro-react-native-babel-preset": "0.76.8",
    "pod-install": "^0.1.39",
    "prettier": "^2.8.0",
    "react-test-renderer": "18.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4"
  }
}
