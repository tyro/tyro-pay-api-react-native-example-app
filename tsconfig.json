{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"]
    },
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "inlineSources": true,
    "sourceMap": true,
    "target": "es2017",
    "checkJs": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "diagnostics": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "./src/**/__test__", "./src/**/*.test.*", "./src/**/*.spec.*"]
}
